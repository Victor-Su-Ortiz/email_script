<%- include('partials/header') %>

<div class="row">
  <div class="col-lg-8 mx-auto">
    <div class="card shadow-sm">
      <div class="card-body p-5">
        <h1 class="text-center mb-4">
          <i class="fas fa-paper-plane text-primary me-2"></i>
          Bulk Email Sender
        </h1>
        <p class="lead text-center mb-5">
          Create personalized email templates and send them to multiple recipients in just a few steps
        </p>
        
        <div class="row g-4 mb-5">
          <div class="col-md-4">
            <div class="card h-100 border-primary">
              <div class="card-body text-center">
                <div class="feature-icon bg-primary text-white rounded-circle mb-3">
                  <i class="fas fa-envelope-open-text"></i>
                </div>
                <h5 class="card-title">1. Create Template</h5>
                <p class="card-text">Design your email template with custom placeholders like [name] or [company]</p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="card h-100 border-primary">
              <div class="card-body text-center">
                <div class="feature-icon bg-primary text-white rounded-circle mb-3">
                  <i class="fas fa-file-csv"></i>
                </div>
                <h5 class="card-title">2. Upload CSV</h5>
                <p class="card-text">Upload a CSV file with recipient data including the placeholders</p>
              </div>
            </div>
          </div>
          
          <div class="col-md-4">
            <div class="card h-100 border-primary">
              <div class="card-body text-center">
                <div class="feature-icon bg-primary text-white rounded-circle mb-3">
                  <i class="fas fa-paper-plane"></i>
                </div>
                <h5 class="card-title">3. Send Emails</h5>
                <p class="card-text">Preview and send personalized emails to all your recipients</p>
              </div>
            </div>
          </div>
        </div>
        
        <div class="text-center">
          <a href="/template" class="btn btn-primary btn-lg px-5 py-3">
            <i class="fas fa-envelope-open-text me-2"></i>
            Get Started
          </a>
        </div>
      </div>
    </div>
    
    <div class="card mt-4 shadow-sm">
      <div class="card-header bg-light">
        <h4 class="mb-0"><i class="fas fa-th-list me-2"></i> Sample Templates</h4>
      </div>
      <div class="card-body">
        <div class="list-group">
          <% defaultTemplates.forEach((template, index) => { %>
            <a href="/template/<%= index %>" class="list-group-item list-group-item-action">
              <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"><%= template.name %></h5>
                <small>Use this template</small>
              </div>
              <p class="mb-1"><%= template.subject %></p>
            </a>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>