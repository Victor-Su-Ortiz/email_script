<%- include('partials/header') %>

<div class="row">
  <div class="col-lg-10 mx-auto">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">
          <i class="fas fa-eye me-2"></i>
          Preview Emails
        </h3>
      </div>
      <div class="card-body p-4">
        <div class="row mb-4">
          <div class="col-lg-12">
            <div class="alert alert-info">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <i class="fas fa-info-circle fa-2x"></i>
                </div>
                <div>
                  <h5 class="mb-1">Ready to Send</h5>
                  <p class="mb-0">
                    You're about to send personalized emails to <strong><%= recipientCount %></strong> recipients.
                    Review the preview below before sending.
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="mb-4">
          <div class="card">
            <div class="card-header">
              <h5 class="mb-0">Email Preview (First Recipient)</h5>
            </div>
            <div class="card-body">
              <div class="mb-4">
                <h6>To: <%= previewRecipient.email %></h6>
                <h6>Subject: <%= previewSubject %></h6>
              </div>
              <hr>
              <div class="email-content">
                <%- previewContent.replace(/\n/g, '<br>').replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>').replace(/\*(.*?)\*/g, '<em>$1</em>') %>
              </div>
            </div>
          </div>
        </div>
        
        <div class="mb-4">
          <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
              <h5 class="mb-0">Recipient Data</h5>
              <span class="badge bg-primary"><%= recipientCount %> recipients</span>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                      <th>#</th>
                      <% fields.forEach(field => { %>
                        <th><%= field %></th>
                      <% }); %>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i = 0; i < Math.min(5, recipientCount); i++) { %>
                      <tr>
                        <td><%= i + 1 %></td>
                        <% fields.forEach(field => { %>
                          <td><%= previewRecipient[field] || '' %></td>
                        <% }); %>
                      </tr>
                    <% } %>
                    <% if (recipientCount > 5) { %>
                      <tr>
                        <td colspan="<%= fields.length + 1 %>" class="text-center">
                          <em>Plus <%= recipientCount - 5 %> more recipients...</em>
                        </td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
        
        <form action="/email/send" method="POST">
          <div class="d-flex justify-content-between">
            <a href="/email/upload" class="btn btn-outline-secondary">
              <i class="fas fa-arrow-left me-1"></i> Back
            </a>
            <button type="submit" class="btn btn-success btn-lg">
              <i class="fas fa-paper-plane me-1"></i> Send <%= recipientCount %> Emails
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>